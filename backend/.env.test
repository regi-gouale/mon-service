# =============================================================================
# Test Environment Configuration
# Used by pytest for running tests
# =============================================================================

# Application
APP_NAME="Church Team Management API - Test"
APP_VERSION="0.1.0"
APP_ENV=development
DEBUG=true

# Security
SECRET_KEY=test-secret-key-for-testing-purposes-only-min-32-chars

# Database (SQLite in-memory for tests, but settings still need a valid URL)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/test_db
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
DATABASE_ECHO=false

# Redis
REDIS_URL=redis://localhost:6379/0
